kind: Service
apiVersion: v1
metadata:
  name: waddl-site-elineharbers
  namespace: default
  labels:
    waddl: elineharbers
spec:
  type: ClusterIP
  selector:
    waddl: elineharbers
  ports:
    - name: http
      port: 80
      protocol: TCP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: waddl-site-elineharbers
  namespace: default
  annotations:
    kubernetes.io/ingress.class: "nginx"
    cert-manager.io/cluster-issuer: "letsencrypt-production"
spec:
  tls:
  - hosts:
    - elineharbers.nl
    - www.elineharbers.nl
    secretName: letsencrypt-production-waddl-site-elineharbers
  rules:
  - host: elineharbers.nl
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: waddl-site-elineharbers
            port:
              number: 80
  - host: www.elineharbers.nl
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: waddl-site-elineharbers
            port:
              number: 80
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: waddl-site-elineharbers
  namespace: default
  labels:
    waddl: elineharbers
spec:
  replicas: 2
  selector:
    matchLabels:
      waddl: elineharbers
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 33%
  template:
    metadata:
      labels:
        waddl: elineharbers
    spec:
      containers:
        - name: waddl-site-elineharbers
          image: registry.imabot.nl/waddl/web-eline-harbers:<VERSION>
          ports:
            - name: http
              containerPort: 80
          livenessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 2
            periodSeconds: 2
          readinessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 2
            periodSeconds: 2
